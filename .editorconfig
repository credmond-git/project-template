##########################################
# Common Settings
##########################################

# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4
max_line_length = 140
ij_visual_guides = 140
ij_continuation_indent_size = 4

[*.{kt,kts}]
indent_size = 4
max_line_length = 140
ij_visual_guides = 140
ij_continuation_indent_size = 4

# Markdown & YAML Settings
[*.{md,yml,yaml}]
trim_trailing_whitespace = false
